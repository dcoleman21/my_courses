<div class="container pad-25-top">
  <div class="row">
    <div class="course-info card center pad-15-top pad-15-bottom">

      <h2> <%= @course.name %></h2>
      <p> <%= @course.time %></p>

      <%= form_with url: registration_path(@course), local: true do |f| %>
        <%= f.label :email %>
        <%= f.email_field :email %>
        <%= f.submit 'Register' %>
      <% end %>
    </div>
  </div>
</div>
